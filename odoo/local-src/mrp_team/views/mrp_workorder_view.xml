<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_team_production_workcenter_tree_view" model="ir.ui.view">
        <field name="name">mrp.team.production.workcenter.tree.view</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workcenter_tree_view_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="technician_id" />
            </xpath>
        </field>
    </record>

    <record id="mrp_team_production_workcenter_form_view" model="ir.ui.view">
        <field name="name">mrp.team.production.workcenter.form.view</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workcenter_form_view_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_produced']" position="after">
                <field name="technician_id" domain="[('share', '=', False)]" />
                <newline />
            </xpath>
        </field>
    </record>

    <record id="mrp_team_workcenter_line_kanban" model="ir.ui.view">
        <field name="name">mrp.team.workcenter.line.kanban</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.workcenter_line_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='workcenter_id']" position="before">
                <field name="technician_id" />
            </xpath>
        </field>
    </record>

    <record id="mrp_team_production_workcenter_form_view_filter" model="ir.ui.view">
        <field name="name">mrp.team.poduction.workcenter.form.view.filter</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_workcenter_form_view_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="technician_id" string="Manufacturing Technician" />
            </xpath>

            <xpath expr="//field[@name='workcenter_id']" position="before">
                <separator/>
                <filter string="My orders" name="my_orders" domain="[('technician_id', '=', uid)]" />
            </xpath>

            <xpath expr="//filter[last()]" position="before">
                <filter string="Technician" domain="[]" context="{'group_by':'technician_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="context">{'search_default_my_orders': 1}</field>
    </record>

</odoo>
