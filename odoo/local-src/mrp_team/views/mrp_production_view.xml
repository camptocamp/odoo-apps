<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_mrp_team_tree_view" model="ir.ui.view">
        <field name="name">mrp.production.mrp.team.tree</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="team_id" />
                <field name="technician_id" />
            </xpath>
        </field>
    </record>

    <record id="mrp_production_mrp_team_form_view" model="ir.ui.view">
        <field name="name">mrp.production.mrp.team.form.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="team_id" />
            </xpath>

            <xpath expr="//field[@name='company_id']" position="after">
                <field name="technician_id" domain="[('share', '=', False)]" />
            </xpath>
        </field>
    </record>

    <record id="mrp_productiom_mrp_team_kanban_view" model="ir.ui.view">
        <field name="name">mrp.production.mrp.team.kanban.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="team_id" />
                <field name="technician_id" />
            </xpath>
        </field>
    </record>

    <record id="mrp_production_mrp_filter_view" model="ir.ui.view">
        <field name="name">mrp.production.mrp.filter.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="team_id" string="Manufacturing Team" />
                <field name="technician_id" string="Manufacturing Technician" />
            </xpath>

            <xpath expr="//filter[@name='waiting']" position="after">
                <separator/>
                <filter string="My orders" name="my_orders" domain="[('technician_id', '=', uid)]" />
            </xpath>

            <xpath expr="//filter[last()]" position="before">
                <filter string="Technician" domain="[]" context="{'group_by':'technician_id'}"/>
                <filter string="Manufacturing Team" domain="[]" context="{'group_by':'team_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="context">{'search_default_my_orders': 1}</field>
    </record>

</odoo>