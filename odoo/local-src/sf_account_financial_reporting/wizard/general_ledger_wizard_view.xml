<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- GENERAL LEDGER -->
    <record id="sf_general_ledger_wizard" model="ir.ui.view">
        <field name="name">General Ledger</field>
        <field name="model">general.ledger.report.wizard</field>
        <field name="inherit_id" ref="account_financial_report_qweb.general_ledger_wizard"/>
        <field name="arch" type="xml">
            <field name="account_ids" position="replace"/>
            <label for="account_ids" position="after">
                <group>
                    <field name="all_account_types"/>
                </group>
            </label>
            <field name="receivable_accounts_only" position="after">
                <field name="account_type_ids" widget="many2many_checkboxes" nolabel="1"/>
                <field name="account_ids" widget="many2many_tags"  nolabel="1" options="{'no_create': True}"/>
            </field>

            <field name="receivable_accounts_only" position="replace"/>
            <field name="payable_accounts_only" position="replace"/>
        </field>
    </record>
</odoo>
