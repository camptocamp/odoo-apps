<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wizard_picking_availability" model="ir.ui.view">
        <field name="name">stock_picking_availability_wizard</field>
        <field name="model">wizard.stock.picking.availability</field>
        <field name="arch" type="xml">
            <form string="Stock Products Availability">
                <field name="picking_id"/>
                <group>
                    <field name="stock_move_lines">
                        <tree colors="red:availability&lt;product_uom_qty">
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="state" invisible="1"/>
                            <field name="availability" invisible="1"/>
                            <field name="string_availability_info"/>
                        </tree>
                    </field>
                    <field name="force_availability"/>
                </group>
                <footer>
                    <button name="do_reserve" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_picking_availability" model="ir.actions.act_window">
        <field name="name">Wizard Products Availability</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.stock.picking.availability</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_wizard_picking_availability"/>
        <field name="target">new</field>
    </record>
</odoo>
