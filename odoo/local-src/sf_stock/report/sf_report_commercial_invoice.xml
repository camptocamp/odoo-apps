<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sf_external_layout_commercial_invoice_header_right" inherit_id="sf_report.sf_external_layout" primary="True">
        <xpath expr="//t[@t-call='sf_report.sf_external_layout_header']" position="attributes">
            <attribute name="t-call">sf_stock.sf_report_commercial_invoice_header_right</attribute>
        </xpath>
    </template>

    <template id="sf_report_commercial_invoice_header_right" inherit_id="sf_report.sf_external_layout_header" primary="True">
        <xpath expr="//div[@name='header_title']" position="inside">
            <p>
                <span><strong>Commercial Invoice:</strong></span>
                <span t-field="p.name"/>
            </p>
            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d %B %Y')"/>
        </xpath>
    </template>

    <template id="sf_report_commercial_invoice_address">
        <div class="row">
            <t t-set="address_lines" t-value="ci.get_address_name_lines(so)"/>
            <div class="col-xs-6">
                <span>Invoicing address:</span><br/>
                <strong t-esc="address_lines['invoicing']['line1']" />
                <br t-if="address_lines['invoicing']['line2']" t-esc="address_lines['invoicing']['line2']" />
                <span t-if="address_lines['invoicing']['line2']" t-esc="address_lines['invoicing']['line2']" />
                <div t-field="so.partner_invoice_id"
                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
            </div>
            <div class="col-xs-6">
                <span>Shipping address:</span><br/>
                <strong t-esc="address_lines['shipping']['line1']" />
                <br t-if="address_lines['shipping']['line2']" t-esc="address_lines['shipping']['line2']" />
                <span t-if="address_lines['shipping']['line2']" t-esc="address_lines['shipping']['line2']" />
                <div t-field="so.partner_shipping_id"
                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
            </div>
        </div>
    </template>

    <template id="sf_report_commercial_invoice">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="p">
                <t t-set="ci" t-value="p.env['commercial.invoice']"/>
                <t t-set="so" t-value="ci.with_context(pick_id=p.id).get_sale_order()"/>
                <t t-call="sf_stock.sf_external_layout_commercial_invoice_header_right">
                    <div class="page">
                        <t t-call="sf_stock.sf_report_commercial_invoice_address" />

                        <hr style="border-top: 1px solid #ccc"/>

                        <div class="row mt32 mb32" id="informations">
                            <div class="col-xs-9">
                                <div t-if="so" class="col-xs-3">
                                    <strong>Quote Reference</strong>
                                    <p t-field="so.name"/>
                                </div>
                                <div t-if="so.client_order_ref" class="col-xs-3">
                                    <strong>P.O. Reference</strong>
                                    <p t-field="so.client_order_ref"/>
                                </div>
                                <div t-if="p.carrier_id" class="col-xs-3">
                                    <strong>Shipping Via</strong>
                                    <p t-field="p.carrier_id"/>
                                </div>
                                <div class="col-xs-3" t-if="so.incoterm">
                                    <strong>Incoterms</strong>
                                    <p t-field="so.incoterm.code"/>
                                </div>
                                <div t-if="p.weight" class="col-xs-3">
                                    <strong>Net Weight</strong>
                                    <p><span t-field="p.weight"/><span t-field="p.weight_uom_id"/></p>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Payment Term</strong>
                                    <p t-field="so.payment_term_id.name"/>
                                </div>
                                <div class="col-xs-3" t-if="p.wave_id.user_id.partner_id">
                                    <strong>Contact Intern</strong>
                                    <p style="line-height:1px;padding-top:8px;">
                                        <span t-field="p.wave_id.user_id.partner_id.name"/>
                                        <span t-field="p.wave_id.user_id.partner_id"
                                              t-options='{"widget": "contact", "fields": ["phone", "mobile", "email"], "no_marker": False, "phone_icons": True}'/>
                                    </p>
                                </div>
                            </div>

                            <div class="col-xs-3" id="contact">
                                <div name="contact" t-if="p.partner_id and (p.partner_id.phone or p.partner_id.mobile or p.partner_id.email)">
                                    <strong>Contact</strong>
                                    <p style="padding-top:8px;">
                                        <span t-field="p.partner_id.name"/>
                                        <span t-field="p.partner_id" t-options='{"widget": "contact", "fields": ["phone", "mobile", "email"], "no_marker": False, "phone_icons": True}'/>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <t t-set="display_discount" t-value="ci.display_discount(so)"/>
                        <t t-set="has_serial_number" t-value="p.pack_operation_ids.filtered('pack_lot_ids')" groups="stock.group_production_lot"/>

                        <t t-foreach="ci.get_order_lines_layouted(so, p)" t-as="page">
                            <table class="table table-condensed mt48">
                            <thead>
                                <tr style="background: #ccc;">
                                    <th>
                                        <strong>Product</strong>
                                    </th>
                                    <th>
                                        <strong>Origin</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Ordered Quantity</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>Delivered Quantity</strong>
                                    </th>
                                    <th>
                                        <strong>Unit Price</strong>
                                    </th>
                                    <th t-if="display_discount" class="text-right">
                                        <strong>Disc.(%)</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>Taxes</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>Price</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="page" t-as="layout_category">
                                    <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                        <tr class="active">
                                            <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                                <t t-esc="layout_category['name']"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <!-- Lines associated -->

                                    <tr t-foreach="layout_category['lines']" t-as="line">
                                        <t t-set="order_line" t-value="line.get('order_line')"/>
                                        <t t-set="pack_operation" t-value="line.get('pack_operation')"/>
                                        <t t-set="serial_numbers" t-value="line.get('serial_numbers')"/>
                                        <!-- Product -->
                                        <td>
                                            <span t-field="order_line.product_id"/>
                                            <p t-if="order_line.product_id.hs_code">HS code: <span t-field="order_line.product_id.hs_code"/></p>
                                            <t t-if="serial_numbers">
                                                <table class="table table-condensed">
                                                    <th name="lot_serial"><span class="pull-left">Lot/Serial Number</span></th>
                                                    <tr>
                                                        <td>
                                                            <t t-foreach="serial_numbers" t-as="sn">
                                                                <p t-field="sn.name"/>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </t>
                                        </td>
                                        <!-- Origin -->
                                        <td>
                                            <span t-esc="order_line.product_id.origin_id.code"/>
                                        </td>
                                        <!-- Ordered Quantity -->
                                        <td>
                                            <table class="table table-condensed">
                                                <tr>
                                                    <td class="text-right" style="border-top: none;">
                                                        <span t-esc="'{0:,.1f}'.format(order_line.product_uom_qty)"/>
                                                        <span t-field="order_line.product_uom"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                        <!-- Delivered Quantity -->
                                        <t t-set="delivered_qty" t-value="ci.get_order_line_delivered_qty(order_line, p)"/>
                                        <t t-if="delivered_qty != order_line.product_uom_qty and order_line.product_id.type != 'service'">
                                            <t t-set="backorder" t-value="True"/>
                                        </t>

                                        <td>
                                            <table class="table table-condensed">
                                                <tr>
                                                    <td class="text-right" style="border-top: none;">
                                                        <span t-esc="'{0:,.1f}'.format(delivered_qty)"/>
                                                        <span t-field="order_line.product_uom"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                        <!-- Price Unit -->
                                        <td>
                                            <table class="table table-condensed">
                                                <tr>
                                                    <td class="text-right" style="border-top: none;">
                                                        <span t-field="order_line.price_unit"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                        <!-- Discount -->
                                        <td t-if="display_discount">
                                            <table class="table table-condensed">
                                                <tr>
                                                    <td class="text-right" style="border-top: none;">
                                                        <span t-field="order_line.discount"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                        <!-- Taxes -->
                                        <td class="text-right">
                                            <table class="table table-condensed">
                                                <tr>
                                                    <td class="text-right" style="border-top: none;">
                                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), order_line.tax_id))"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                        <!-- Delivered Qty Price -->
                                        <td>
                                            <table class="table table-condensed">
                                                <tr>
                                                    <td class="text-right" style="border-top: none;">
                                                        <span t-esc="'{0:,.2f}'.format(ci.get_order_line_delivered_qty_price(order_line, delivered_qty))"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <t t-if="page_index &lt; page_size - 1">
                            <p style="page-break-before:always;"> </p>
                        </t>
                        </t>

                        <!-- Total amounts -->
                        <div class="row" t-if="p.pack_operation_ids">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                     <t t-set="total_amounts" t-value="ci.get_total_amounts(so, p)"/>
                                    <tr class="border-black" >
                                        <td><strong>Total Without Taxes</strong></td>
                                        <td class="text-right">
                                            <span t-esc="total_amounts['subtotal']" t-options="{'widget': 'monetary', 'display_currency': so.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Taxes</td>
                                        <td class="text-right">
                                            <span t-esc="total_amounts['tax']" t-options="{'widget': 'monetary', 'display_currency': so.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black" >
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-esc="total_amounts['total']" t-options="{'widget': 'monetary', 'display_currency': so.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>.

                        <p t-if="p.backorder_id">
                            This shipment is a backorder of <t t-esc="p.backorder_id.name"/>.
                        </p>
                        <p>
                            <t t-if="backorder">
                                All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                            </t>
                        </p>

                        <!-- Trade agreements -->
                        <div class="row" id="fta" name="fta">
                            <div class="col-xs-12" name="fta_col">
                                <div name="fta_desc" t-if="p.partner_id and p.free_trade_show">
                                    <span t-field="p.partner_id.country_id.agreement_desc"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
