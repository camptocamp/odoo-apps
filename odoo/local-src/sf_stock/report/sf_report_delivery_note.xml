<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sf_external_layout_deliverynote_header_right" inherit_id="sf_report.sf_external_layout" primary="True">
        <xpath expr="//t[@t-call='sf_report.sf_external_layout_header']" position="attributes">
            <attribute name="t-call">sf_stock.sf_report_deliverynote_header_right</attribute>
        </xpath>
    </template>

    <template id="sf_report_deliverynote_header_right" inherit_id="sf_report.sf_external_layout_header" primary="True">
        <xpath expr="//div[@name='header_title']" position="inside">
            <p>
                <span><strong>Delivery note invoice:</strong></span>
                <span t-field="o.name"/>
            </p>
            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d %B %Y')"/>
        </xpath>
    </template>

    <template id="sf_report_deliverynote_document">
        <t t-call="sf_stock.sf_external_layout_deliverynote_header_right">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
        </t>
    </template>

    <template id="sf_report_deliverynote">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="sf_stock.sf_report_deliverynote_document" t-lang="o.partner_id.lang"/>
                <div class="page">
                    <div class="row">
                        <div class="col-xs-6">
                            <span>Invoicing address:</span><br/>
                            <strong t-if="o.procurement_group_sale_id.partner_invoice_id.commercial_company_name" t-field="o.procurement_group_sale_id.partner_invoice_id.commercial_company_name"/>
                            <span t-if="o.procurement_group_sale_id.partner_invoice_id.commercial_company_name"><br/></span>
                            <span t-if="o.procurement_group_sale_id.partner_invoice_id.name and o.procurement_group_sale_id.partner_invoice_id.commercial_company_name and o.partner_id.name != o.partner_id.commercial_company_name" t-field="o.sale_id.partner_invoice_id.name"/>
                            <strong t-if="o.procurement_group_sale_id.partner_invoice_id.name and not o.procurement_group_sale_id.partner_invoice_id.commercial_company_name"
                                    t-field="o.procurement_group_sale_id.partner_invoice_id.name"/>
                            <div t-field="o.procurement_group_sale_id.partner_invoice_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                            <p t-if="o.procurement_group_sale_id and o.procurement_group_sale_id.partner_id.vat">VAT: <span t-field="o.procurement_group_sale_id.partner_id.vat"/></p>
                        </div>
                        <div class="col-xs-6">
                            <span>Shipping address:</span><br/>
                            <strong t-if="o.partner_id.commercial_company_name" t-field="o.partner_id.commercial_company_name"/>
                            <br t-if="o.partner_id.commercial_company_name"/>
                            <span t-if="o.partner_id.name and o.partner_id.commercial_company_name and o.partner_id.name != o.partner_id.commercial_company_name"
                                  t-field="o.partner_id.name"/>
                            <strong t-if="o.partner_id.name and not o.partner_id.commercial_company_name" t-field="o.partner_id.name"/>
                            <div t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </div>
                    </div>

                    <hr style="border-top: 1px solid #ccc"/>

                    <div class="row mt32 mb32" id="informations">
                        <div class="col-xs-9">
                            <div t-if="o.procurement_group_sale_id" class="col-xs-3">
                                <strong>Quote Reference</strong>
                                <p t-field="o.procurement_group_sale_id.name"/>
                            </div>
                            <div t-if="o.procurement_group_sale_id.client_order_ref" class="col-xs-3">
                                <strong>P.O. Reference</strong>
                                <p t-field="o.procurement_group_sale_id.client_order_ref"/>
                            </div>
                            <div t-if="o.carrier_id" class="col-xs-3">
                                <strong>Shipping Via</strong>
                                <p t-field="o.carrier_id"/>
                            </div>

                            <div class="col-xs-3" t-if="o.procurement_group_sale_id.incoterm">
                                <strong>Incoterms</strong>
                                <p t-field="o.procurement_group_sale_id.incoterm.code"/>
                            </div>
                            <div t-if="o.weight" class="col-xs-3">
                                <strong>Net Weight</strong>
                                <p><span t-field="o.weight"/><span t-field="o.weight_uom_id"/></p>
                            </div>
                            <div class="col-xs-3">
                                <strong>Gross Weight</strong>
                                <p><span t-field="o.shipping_weight"/><span t-field="o.weight_uom_id"/></p>
                            </div>
                            <div class="col-xs-3" t-if="o.wave_id.user_id.partner_id">
                                <strong>Contact Intern</strong>
                                <p style="line-height:1px;padding-top:8px;">
                                    <span t-field="o.wave_id.user_id.partner_id.name"/>
                                    <span t-field="o.wave_id.user_id.partner_id" t-options='{"widget": "contact", "fields": ["phone", "mobile", "email"], "no_marker": False, "phone_icons": True}'/>
                                </p>
                            </div>
                        </div>
                        <div class="col-xs-3" id="contact">
                            <div name="contact" t-if="o.partner_id and (o.partner_id.phone or o.partner_id.mobile or o.partner_id.email)">
                                <strong>Contact</strong>
                                <p style="padding-top:8px;">
                                    <span t-field="o.partner_id.name"/>
                                    <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["phone", "mobile", "email"], "no_marker": False, "phone_icons": True}'/>
                                </p>
                            </div>
                        </div>
                    </div>


                    <t t-set="backorder" t-value="False"/>
                    <t t-set="sale" t-value="o.group_id.sale_ids"/>

                    <table class="table table-condensed mt48"  t-if="o.group_id.sale_ids">

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([order_line.discount for order_line in sale.order_line])"/>
                        <t t-set="has_serial_number" t-value="o.pack_operation_ids.filtered('pack_lot_ids')" groups="stock.group_production_lot"/>

                        <thead>
                            <tr style="background: #ccc;">
                                <th>
                                    <strong>Product</strong>
                                </th>
                                <th>
                                    <strong>Origin</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Ordered Quantity</strong>
                                </th>
                                <th class="text-right">
                                    <strong>Delivered Quantity</strong>
                                </th>
                                <th>
                                    <strong>Unit Price</strong>
                                </th>
                                <th t-if="display_discount" class="text-right">
                                    <strong>Disc.(%)</strong>
                                </th>
                                <th class="text-right">
                                    <strong>Taxes</strong>
                                </th>
                                <th class="text-right">
                                    <strong>Price</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-if="any([order_line.id in pack_operation.sale_line_ids.ids or (order_line.product_id.type == 'service' and not o.backorder_id)
                            for pack_operation in o.pack_operation_ids])" t-foreach="sale.order_line" t-as="order_line">
                                <t t-set="pack_operation" t-value="o.pack_operation_ids.filtered(lambda p: order_line.id in p.sale_line_ids.ids)"/>
                                <!-- Product -->
                                <td>
                                    <span t-field="order_line.product_id"/>
                                    <p t-if="order_line.product_id.hs_code">HS code: <span t-field="order_line.product_id.hs_code"/></p>
                                    <t t-if="has_serial_number and pack_operation.pack_lot_ids">
                                        <table class="table table-condensed" t-if="pack_operation.pack_lot_ids">
                                            <th name="lot_serial"><span class="pull-left">Lot/Serial Number</span></th>
                                            <tr>
                                                <td>
                                                    <t t-foreach="o.move_lines" t-as="stock_move" t-if="stock_move.sale_line_id and stock_move.sale_line_id.id == order_line.id">
                                                        <t t-foreach="stock_move.lot_ids" t-as="lot_id">
                                                            <p t-field="lot_id.name"/>
                                                        </t>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </t>
                                </td>
                                <!-- Origin -->
                                <td>
                                    <span t-field="order_line.product_id.origin_id.code"/>
                                </td>
                                <!-- Ordered Quantity -->
                                <td>
                                    <table class="table table-condensed">
                                        <tr>
                                            <td class="text-right" style="border-top: none;">
                                                <span t-esc="'{0:,.1f}'.format(order_line.product_uom_qty)"/>
                                                <span t-field="order_line.product_uom"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <!-- Delivered Quantity -->
                                <td t-if="order_line.product_id.type != 'service'">
                                    <table class="table table-condensed">
                                        <tr>
                                            <td class="text-right" style="border-top: none;">
                                                <t t-set="delivered_qty" t-value="sum(stock_move.product_uom_qty
                                                for stock_move in o.move_lines if stock_move.sale_line_id and stock_move.sale_line_id.id == order_line.id and stock_move.state in ('assigned', 'done'))"/>
                                                <span t-esc="delivered_qty"/>
                                                <span t-field="order_line.product_uom"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>

                                <t t-if="delivered_qty != order_line.product_uom_qty and order_line.product_id.type != 'service'">
                                    <t t-set="backorder" t-value="True"/>
                                </t>

                                <td t-if="order_line.product_id.type == 'service'">
                                    <table class="table table-condensed">
                                        <tr>
                                            <td class="text-right" style="border-top: none;">
                                                <span t-esc="'{0:,.1f}'.format(order_line.product_uom_qty)"/>
                                                <span t-field="order_line.product_uom"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <!-- Price Unit -->
                                <td>
                                    <table class="table table-condensed">
                                        <tr>
                                            <td class="text-right" style="border-top: none;">
                                                <span t-field="order_line.price_unit"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <!-- Discount -->
                                <td t-if="display_discount">
                                    <table class="table table-condensed">
                                        <tr>
                                            <td class="text-right" style="border-top: none;">
                                                <span t-field="order_line.discount"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <!-- Taxes -->
                                <td class="text-right">
                                    <table class="table table-condensed">
                                        <tr>
                                            <td class="text-right" style="border-top: none;">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), order_line.tax_id))"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <!-- Delivered Qty Price -->
                                <td>
                                    <table class="table table-condensed">
                                        <tr>
                                            <td t-if="order_line.product_id.type != 'service'" class="text-right" style="border-top: none;">
                                                <span t-esc="'{0:,.2f}'.format(delivered_qty * order_line.price_subtotal / order_line.product_uom_qty)"/>
                                            </td>
                                            <td t-if="order_line.product_id.type == 'service'" class="text-right" style="border-top: none;">
                                                <span t-esc="'{0:,.2f}'.format(order_line.product_uom_qty * order_line.price_subtotal)"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row" t-if="o.pack_operation_ids">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black" >
                                    <!-- Iterate in stock move and service lines to calculate the sum-->
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <t t-set="price_subtotal_products" t-value="sum(stock_move.sale_line_id.price_subtotal * stock_move.product_uom_qty / stock_move.sale_line_id.product_uom_qty
                                        for stock_move in o.move_lines if stock_move.sale_line_id.product_uom_qty and stock_move.state in ('assigned', 'done'))"/>
                                        <t t-set="price_subtotal_services" t-value="sum(ol.price_subtotal for ol in sale.order_line if ol.product_id.type == 'service' and not o.backorder_id)"/>
                                        <span t-esc="price_subtotal_products + price_subtotal_services" t-options="{'widget': 'monetary', 'display_currency': sale.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <t t-set="price_tax_products" t-value="sum(stock_move.sale_line_id.price_tax * stock_move.product_uom_qty / stock_move.sale_line_id.product_uom_qty
                                        for stock_move in o.move_lines if stock_move.sale_line_id.product_uom_qty and stock_move.state in ('assigned', 'done'))"/>
                                        <t t-set="price_subtotal_services" t-value="sum(ol.price_tax for ol in sale.order_line if ol.product_id.type == 'service' and not o.backorder_id)"/>
                                        <span t-esc="price_tax_products + price_subtotal_services" t-options="{'widget': 'monetary', 'display_currency': sale.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black" >
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <t t-set="price_total_products" t-value="sum(stock_move.sale_line_id.price_total * stock_move.product_uom_qty / stock_move.sale_line_id.product_uom_qty
                                        for stock_move in o.move_lines if stock_move.sale_line_id.product_uom_qty and stock_move.state in ('assigned', 'done'))"/>
                                        <t t-set="price_subtotal_services" t-value="sum(ol.price_total for ol in sale.order_line if ol.product_id.type == 'service' and not o.backorder_id)"/>
                                        <span t-esc="price_total_products + price_subtotal_services" t-options="{'widget': 'monetary', 'display_currency': sale.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <p t-if="o.backorder_id">
                        This shipment is a backorder of <t t-esc="o.backorder_id.name"/>.
                    </p>
                    <p>
                        <t t-if="backorder">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                    <p>
                      Final invoice will be issued after the delivery.
                    </p>

                    <div class="row" id="fta" name="fta">
                        <div class="col-xs-12" name="fta_col">
                            <div name="fta_desc" t-if="o.partner_id and o.free_trade_show">
                                <span t-field="o.partner_id.country_id.agreement_desc"/>
                            </div>
                        </div>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
