<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sf_vpicktree" model="ir.ui.view">
            <field name="name">sf.vpicktree.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <field name="min_date" position="after">
                    <field name="date_done"/>
                </field>
            </field>
    </record>

    <record id="sf_view_picking_form" model="ir.ui.view">
            <field name="name">sf.view.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <field name="min_date" position="after">
                    <field name="date_shipped" attrs="{'invisible':[('date_shipped', '=', False)], 'readonly': [('state', '!=', 'assigned')]}"/>
                    <field name="date_delivered" attrs="{'invisible':['|', ('date_shipped', '=', False), ('state', '=', 'assigned')]}"/>
                    <field name="date_done" attrs="{'invisible':[('date_done', '=', False)]}"/>
                </field>

                <button name="do_new_transfer" position="replace">
                    <field name="show_button_shipped" invisible="1"/>
                    <button name="do_new_transfer" string="Validate" groups="stock.group_stock_user" type="object" class="oe_highlight"
                            attrs="{'invisible': [ '|', '&amp;', ('date_shipped', '=', False), ('show_button_shipped', '=', True),
                            ('state', 'not in', ('draft','partially_available','assigned'))]}"/>

                    <button name="action_shipped" string="Shipped" groups="stock.group_stock_user" type="object" class="oe_highlight"
                            attrs="{'invisible':['|', ('show_button_shipped', '=', False), ('date_shipped','!=', False)]}"/>
                </button>

                <div name="tracking" position="after">
                    <field name="confirm_customer_received" invisible="1"/>
                    <field name="customer_received" attrs="{'invisible':[('confirm_customer_received', '=', False)]}"/>
                </div>
            </field>
    </record>

    <record id="sf_view_picking_wave_tree" model="ir.ui.view">
        <field name="name">sf.view.picking_wave.tree.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_picking_wave.view_stock_picking_wave_tree_inherit" />
        <field name="arch" type="xml">
            <field name="wave_id" position="replace" />
            <field name="state" position="after">
                <field name="wave_id" />
            </field>
        </field>
    </record>

    <record id="sf_view_picking_tree" model="ir.ui.view">
        <field name="name">sf.view.picking.tree.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="picking_type_id" position="replace" />
            <field name="location_dest_id" position="after">
                <field name="picking_type_id" />
            </field>
        </field>
    </record>

    <record id="view_picking_internal_search_inherit" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <filter name="backorder" position="after">
                 <separator/>
                <filter name="customer_received" string="Confirmed Reception" domain="[('customer_received','=', True)]" help="Delivery orders with reception confirmed"/>
                <filter name="customer_received_unconfirmed" string="Unconfirmed Reception" domain="[('customer_received','=', False)]"/>
            </filter>
        </field>
    </record>
</odoo>