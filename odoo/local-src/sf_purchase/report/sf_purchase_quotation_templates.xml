<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sf_external_layout_purchasequotation_header_right" inherit_id="sf_report.sf_external_layout" primary="True">
        <xpath expr="//t[@t-call='sf_report.sf_external_layout_header']" position="attributes">
            <attribute name="t-call">sf_purchase.sf_report_purchasequotation_header_right</attribute>
        </xpath>
    </template>

    <template id="sf_report_purchasequotation_header_right" inherit_id="sf_report.sf_external_layout_header" primary="True">
            <xpath expr="//div[@name='header_title']" position="inside">
                <p style="font-size:16px; font-weight: bold;">
                    <span>Request for Quotation: </span>
                    <span t-field="o.name"/>
                </p>
                <span t-field="o.date_order" t-field-options='{"format": "d MMMM yyyy"}'/>
            </xpath>
    </template>

    <template id="sf_report_purchasequotation">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="sf_purchase.sf_report_purchasequotation_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="sf_report_purchasequotation_document">
        <t t-call="sf_purchase.sf_external_layout_purchasequotation_header_right">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>

                <div class="row">
                    <div class="col-xs-6">
                        <span>Purchase from:</span><br />
                        <strong t-if="o.partner_id.commercial_company_name" t-field="o.partner_id.commercial_company_name"/>
                        <strong t-if="o.partner_id.name and not o.partner_id.commercial_company_name" t-field="o.partner_id.name"/>
                        <div t-field="o.partner_id"
                            t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                    </div>

                    <div class="col-xs-6">
                        <span>Shipping address:</span><br/>
                        <div t-if="o.dest_address_id">
                            <strong t-if="o.dest_address_id.commercial_company_name" t-field="o.dest_address_id.commercial_company_name"/>
                            <span t-if="o.dest_address_id.commercial_company_name"><br/></span>
                            <span t-if="o.dest_address_id.name" t-field="o.dest_address_id.name"/>
                            <div t-field="o.dest_address_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </div>

                        <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                            <strong t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </div>
                    </div>
                </div>

                <hr style="border-top: 1px solid #ccc"/>

                <table class="table table-condensed">
                    <thead>
                        <tr style="background: #ccc;">
                            <th><strong>Description</strong></th>
                            <th class="text-center"><strong>Expected Date</strong></th>
                            <th class="text-right"><strong>Qty</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="order_line">
                            <td>
                                <span t-field="order_line.name"/>
                            </td>
                            <td class="text-center">
                                <span t-field="order_line.date_planned"/>
                            </td>
                            <td class="text-right">
                                <span t-field="order_line.product_qty"/>
                                <span t-field="order_line.product_uom" groups="product.group_uom"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <p t-field="o.notes"/>

                <div class="oe_structure"/>

                <t t-call="sf_terms_and_conditions.purchase_terms_and_conditions" />
            </div>
        </t>
    </template>
</odoo>
    
