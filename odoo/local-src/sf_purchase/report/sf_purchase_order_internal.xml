<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sf_external_layout_internal_purchaseorder_header_right" inherit_id="sf_report.sf_external_layout" primary="True">
        <xpath expr="//t[@t-call='sf_report.sf_external_layout_header']" position="attributes">
            <attribute name="t-call">sf_purchase.sf_report_internal_purchaseorder_header_right</attribute>
        </xpath>
    </template>

    <template id="sf_report_internal_purchaseorder_header_right" inherit_id="sf_report.sf_external_layout_header" primary="True">
            <xpath expr="//div[@name='header_title']" position="inside">
                <p style="font-size:24px;text-align: center; letter-spacing: 4px;border: 1px solid;border-style: dotted;font-weight: bold;">INTERNAL</p>
                <p style="font-size:16px; font-weight: bold;">
                    <span t-if="o.state != 'draft'">Purchase Order: </span>
                    <span t-if="o.state == 'draft'">Request for Quotation: </span>
                    <span t-field="o.name"/>
                </p>
                <span t-field="o.date_order" t-field-options='{"format": "d MMMM yyyy"}'/>
            </xpath>
    </template>

    <template id="sf_report_internal_purchaseorder">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="sf_purchase.sf_report_internal_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="sf_report_internal_purchaseorder_document">
        <t t-call="sf_purchase.sf_external_layout_internal_purchaseorder_header_right">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6">
                        <span>Request from:</span><br />
                        <strong t-if="o.partner_id.commercial_company_name" t-field="o.partner_id.commercial_company_name"/>
                        <strong t-if="o.partner_id.name" t-field="o.partner_id.name"/>
                        <div t-field="o.partner_id"
                            t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                    </div>

                    <div class="col-xs-6">
                        <span>Shipping address:</span><br/>
                        <div t-if="o.dest_address_id">
                            <strong t-if="o.dest_address_id.commercial_company_name" t-field="o.dest_address_id.commercial_company_name"/>
                            <span t-if="o.dest_address_id.commercial_company_name"><br/></span>
                            <span t-if="o.dest_address_id.name" t-field="o.dest_address_id.name"/>
                            <div t-field="o.dest_address_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </div>

                        <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                            <strong t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </div>
                    </div>
                </div>

                <hr style="border-top: 1px solid #ccc"/>

                <div class="row mt32 mb32" id="informations">
                    <div t-if="o.name" class="col-xs-3">
                        <strong>Our Order Reference</strong>
                        <p t-field="o.name"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Responsible</strong>
                        <p t-field="o.create_uid.name"/>
                    </div>
                    <div t-if="o.partner_ref" class="col-xs-3">
                        <strong>Your Order Reference</strong>
                        <p t-field="o.partner_ref"/>
                    </div>
                    <div t-if="o.date_order" class="col-xs-3">
                        <strong>Order Date</strong>
                        <p t-field="o.date_order" t-field-options='{"format": "dd/MM/yyyy"}'/>
                    </div>
                    <div t-if="o.incoterm_id" class="col-xs-3">
                        <strong>Incoterm</strong>
                        <p t-field="o.incoterm_id.code"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr style="background: #ccc;">
                            <th>Description</th>
                            <th class="text-center">Scheduled Date</th>
                            <th class="text-center">Department</th>
                            <th class="text-center">Project</th>
                            <th class="text-center">Account</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th class="text-right">Net Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td>
                                <span t-field="line.name"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.date_planned" t-field-options='{"format": "dd/MM/yyyy"}'/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.analytic_tag_ids.code"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.account_analytic_id.name"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.product_id.property_account_expense_id.code"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.product_qty"/>
                                <span t-field="line.product_uom.name" groups="product.group_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Total Without Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total Due</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>