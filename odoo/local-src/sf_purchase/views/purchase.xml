<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sf_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">sf.purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="print_draft"  attrs="{'invisible':[('state','not in',('draft'))]}"/>
            </field>
            <field name="date_order" position="before">
                <field name="second_vendor_id"/>
            </field>
            <field name="date_order" position="after">
                <field name="confirmation_date"/>
            </field>
            <field name="analytic_tag_ids" position="replace"/>
            <field name="account_analytic_id" position="before">
                <field name="analytic_tag_ids"
                       string="Team" groups="purchase.group_analytic_accounting" widget="many2many_tags" attrs="{'required': True}"/>
            </field>
            <field name="account_analytic_id" position="attributes">
                <attribute name="string">Project</attribute>
                <attribute name="help">Analytic Account means Project</attribute>
            </field>
        </field>
    </record>

    <record id="sf_purchase_order_tree_inherit" model="ir.ui.view">
        <field name="name">sf.purchase.order.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="date_planned" position="after">
                <field name="confirmation_date"/>
            </field>
        </field>
    </record>

</odoo>