<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sensesefly_product_inherit" model="ir.ui.view">
            <field name="name">sensefly.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="uom_po_id" position="after">
                    <field name="origin_id"/>
                </field>
                <div name="options" position="replace">
                    <div class="row">
                        <div class="col-xs-3">
                            <div>
                                <field name="sale_ok"/>
                                <label for="sale_ok"/>
                            </div>
                            <div>
                                <field name="purchase_ok"/>
                                <label for="purchase_ok"/>
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <field name="validator_user" invisible="1"/>
                            <field name="validated"  attrs="{'readonly':[('validator_user','=',False)]}"/>
                            <label for="validated"/>
                        </div>
                    </div>
                </div>
            </field>
        </record>
</odoo>