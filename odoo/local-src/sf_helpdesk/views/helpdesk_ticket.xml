<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sf_helpdesk_ticket_view_form" model="ir.ui.view">
            <field name="name">sf.helpdesk.ticket.form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="number"/>
                    <span>: &#160;</span>
                </field>

                <field name="partner_id" position="attributes">
                    <attribute name="string">Created by</attribute>
                    <attribute name="domain">[('user_ids','!=', False)]</attribute>
                </field>

                <field name="partner_name" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="partner_email" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="description" position="after">
                    <field name="solution" placeholder="Solution..."/>
                </field>
            </field>
        </record>

        <record id="sf_helpdesk_ticket_view__kanban" model="ir.ui.view">
            <field name="name">sf.helpdesk.ticket._kanban</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_kanban"/>
            <field name="arch" type="xml">
                <field name="id" position="replace">
                    <field name="number"/>
                </field>
            </field>
        </record>

        <record id="sf_helpdesk_tickets_view_search" model="ir.ui.view">
            <field name="name">sf.helpdesk.ticket.search</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_search"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="number"/>
                </field>
            </field>
        </record>
</odoo>
