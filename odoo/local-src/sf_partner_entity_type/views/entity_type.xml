<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Entity type -->
  <record id="view_partner_entity_type_form" model="ir.ui.view">
    <field name="name">Entity Types</field>
    <field name="model">res.partner.entity.type</field>
    <field name="arch" type="xml">
      <form string="Entity Type">
        <group col="4">
          <field name="name"/>
          <field name="active"/>
        </group>
      </form>
    </field>
  </record>
  <record id="view_partner_entity_type_list" model="ir.ui.view">
    <field name="name">Entity Types</field>
    <field name="model">res.partner.entity.type</field>
    <field eval="6" name="priority"/>
    <field name="arch" type="xml">
      <tree string="Entity Types">
        <field name="display_name"/>
      </tree>
    </field>
  </record>
  <record id="action_partner_entity_type_form" model="ir.actions.act_window">
    <field name="name">Entity Types</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.partner.entity.type</field>
    <field name="view_type">form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Click to create a new entity type.
      </p>
      <p>
        Manage partner entity type to better classify them.
        A partner can only be of one entity type.
      </p>
    </field>
  </record>

  <menuitem action="action_partner_entity_type_form" id="menu_partner_entity_type_form" name="Entity Types" sequence="2" parent="sales_team.menu_config_address_book" groups="base.group_no_one"/>

</odoo>

