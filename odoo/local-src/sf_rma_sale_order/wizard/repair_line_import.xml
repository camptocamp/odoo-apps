<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_repair_lines_import_form_view" model="ir.ui.view">
        <field name="name">sale.order.repair.lines.import.form</field>
        <field name="model">sale.order.repair.lines.import</field>
        <field name="arch" type="xml">
            <form string="Import repair lines">
                <group>
                    <field name="sale_order_id" />
                    <field name="repair_line_ids">
                        <tree editable="top" create="0" edit="0">
                            <field name="type" />
                            <field name="name" />
                            <field name="product_id" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Import lines" name="import_lines" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_mrp_repair_lines" model="ir.actions.act_window">
        <field name="name">Import MRP Repair Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.repair.lines.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_order_repair_lines_import_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>
