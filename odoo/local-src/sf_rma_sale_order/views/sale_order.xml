<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="rma_id" attrs="{'invisible': [('rma_id', '=', False)]}" />
            </field>
            <field name="state" position="before">
                <button name="%(action_import_mrp_repair_lines)d" context="{'default_sale_order_id': active_id}" type="action" string="Import repair lines" attrs="{'invisible': ['|', ('rma_id', '=', False), ('state', '=', 'sale')]}"/>
            </field>
        </field>
    </record>

</odoo>
