<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sf_sales_forecast_import_form">
            <field name="name">sf.sales.forecast.import.form</field>
            <field name="model">sf.sales.forecast.import</field>
            <field name="arch" type="xml">
                <form string="Sales Forecast">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" attrs="{'invisible':[('name','=',False)]}"/>
                            </h1>
                        </div>
                        <group>
                            <field name="data" filename="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sf_sales_forecast_import_tree">
            <field name="name">sf.sales.forecast.import.tree</field>
            <field name="model">sf.sales.forecast.import</field>
            <field name="arch" type="xml">
                <tree string="Sales Forecast">
                    <field name="name"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <!-- Actions -->
        <record model="ir.actions.act_window" id="sf_sales_forecast_import_action">
            <field name="name">Import Sales Forecast</field>
            <field name="res_model">sf.sales.forecast.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sf_sales_forecast_import_tree"/>
        </record>

        <!-- Menu -->
        <menuitem id="menu_act_sf_sales_forecast_import_view"
                  parent="main_menu_sales_forecast"
                  action="sf_sales_forecast_import_action" sequence="10"
                  name="Import Forecast"/>
    </data>
</odoo>
