<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_procurements"
                        attrs="{'invisible': ['|', ('down_payment_required', '=', False), '|', ('state', '!=', 'sale'), ('down_payment_missing', '=', True )]}"
                        type="object" string="Validate the payment" groups="account.group_account_user,account.group_account_manager"/>
            </xpath>
            <field name="payment_term_id" position="after">
                <field name="down_payment_required" invisible="1" />
                <field name="down_payment_missing" invisible="1" />
            </field>
        </field>
    </record>

    <record id="action_orders_missing_down_payment" model="ir.actions.act_window">
        <field name="name">Sales missing down payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('down_payment_required','=',True),('down_payment_missing','=',True)]</field>
    </record>

    <menuitem id="sale.menu_sale_order_down_payment" parent="account.menu_finance_receivables" string="Sales requiring down payment" action="action_orders_missing_down_payment"/>

    <menuitem id="sale.menu_sale_order_invoice" parent="account.menu_finance_receivables" string="Sales to Invoice" action="sale.action_orders_to_invoice"/>
</odoo>
