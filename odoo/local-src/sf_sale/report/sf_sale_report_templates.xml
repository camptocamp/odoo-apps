<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sf_external_layout_quotation_header_right" inherit_id="sf_report.sf_external_layout" primary="True">
        <xpath expr="//t[@t-call='sf_report.sf_external_layout_header']" position="attributes">
            <attribute name="t-call">sf_sale.sf_report_quotation_header_right</attribute>
        </xpath>
    </template>

    <template id="sf_report_quotation_header_right" inherit_id="sf_report.sf_external_layout_header" primary="True">
            <xpath expr="//div[@name='header_title']" position="inside">
                <p style="font-size:16px; font-weight: bold;">
                    <span t-if="doc.state not in ['draft','sent']"><strong>Order</strong></span>
                    <span t-if="doc.state in ['draft','sent']"><strong>Quotation: </strong></span>
                    <span t-field="doc.name"/>
                </p>
                <span t-field="doc.date_order" t-field-options='{"format": "d MMMM yyyy"}'/>
            </xpath>
    </template>


    <template id="sf_report_saleorder_document">
        <t t-call="sf_sale.sf_external_layout_quotation_header_right">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6">
                        <span>Invoicing address:</span><br/>
                        <strong t-if="doc.partner_invoice_id.commercial_company_name" t-field="doc.partner_invoice_id.commercial_company_name"/>
                        <span t-if="doc.partner_invoice_id.commercial_company_name"><br/></span>
                        <span t-if="doc.partner_invoice_id.name" t-field="doc.partner_invoice_id.name"/>
                        <div t-field="doc.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        <p t-if="doc.partner_invoice_id.vat">VAT: <span t-field="doc.partner_invoice_id.vat"/></p>
                    </div>

                    <div class="col-xs-6">
                        <span>Shipping address:</span><br/>
                        <strong t-if="doc.partner_shipping_id.commercial_company_name" t-field="doc.partner_shipping_id.commercial_company_name"/>
                        <span t-if="doc.partner_shipping_id.commercial_company_name"><br/></span>
                        <span t-if="doc.partner_shipping_id.name" t-field="doc.partner_shipping_id.name"/>
                        <div t-field="doc.partner_shipping_id"
                            t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                    </div>
                </div>

                <hr style="border-top: 1px solid #ccc"/>

                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.name" class="col-xs-3">
                        <strong>Quote Reference</strong>
                        <p t-field="doc.name"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-xs-3">
                        <strong>Salesperson</strong>
                        <p t-field="doc.user_id"/>
                    </div>
                    <div t-if="doc.client_order_ref" class="col-xs-3">
                        <strong>P.O. Reference</strong>
                        <p t-field="doc.client_order_ref"/>
                    </div>
                    <div name="payment_term" t-if="doc.payment_term_id and not doc.client_order_ref" class="col-xs-3">
                        <strong>Payment Terms</strong>
                        <p t-field="doc.payment_term_id"/>
                    </div>
                    <div name="contact" t-if="doc.partner_id" class="col-xs-3">
                        <strong>Contact</strong>
                        <p style="padding-top:8px;">
                            <span t-field="doc.partner_id.name"/>
                            <span t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["phone", "mobile", "email"], "no_marker": False, "phone_icons": True}'/>
                        </p>
                    </div>
                    <div class="col-xs-3" t-if="doc.carrier_id">
                        <strong>Shipping Via</strong>
                        <p t-field="doc.carrier_id"/>
                    </div>
                    <div class="col-xs-3" t-if="doc.incoterm" groups="sale.group_display_incoterm">
          		        <strong>Incoterms</strong>
          		        <p t-field="doc.incoterm.code"/>
        	        </div>
                    <div name="payment_term" t-if="doc.payment_term_id and doc.client_order_ref" class="col-xs-3">
                        <strong>Payment Terms</strong>
                        <p t-field="doc.payment_term_id"/>
                    </div>
                    <div name="payment_term"  t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-xs-3">
                        <strong>Valid Until</strong>
                        <p t-field="doc.validity_date"/>
                    </div>
                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                <t t-foreach="doc.order_lines_layouted()" t-as="page">
                    <table class="table table-condensed">
                        <thead>
                            <tr style="background: #ccc;">
                                <th>Description</th>
                                <th class="text-right">Origin</th>
                                <th class="text-right">HS Code</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Unit Price</th>
                                <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                                <th class="text-right">Taxes</th>
                                <th class="text-right" groups="sale.group_show_price_subtotal">Price</th>
                                <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                            </tr>
                       </thead>
                       <tbody class="sale_tbody">
                            <t t-foreach="page" t-as="layout_category">

                                <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                    <tr class="active">
                                        <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                            <t t-esc="layout_category['name']"/>
                                        </td>
                                    </tr>
                                </t>

                                <!-- Lines associated -->
                                <t t-foreach="layout_category['lines']" t-as="l">
                                    <tr>
                                        <td><span t-field="l.name"/></td>
                                        <td class="text-right"><span t-field="l.product_id.origin_id.code"/></td>
                                        <td class="text-right">
                                            <span t-field="l.product_tmpl_id.hs_code"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.product_uom_qty"/>
                                            <span t-field="l.product_uom" groups="product.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                        </td>
                                        <td class="text-right" groups="sale.group_show_price_subtotal">
                                            <span t-field="l.price_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                        <td class="text-right" groups="sale.group_show_price_total">
                                            <span t-field="l.price_total"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>

                                <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                    <tr class="text-right">
                                        <td colspan="6">
                                            <strong>Subtotal: </strong>
                                            <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                            <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>

                            </t>
                        </tbody>
                    </table>

                    <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                        <p style="page-break-before:always;"> </p>
                    </t>

                    <div class="row" name="total">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_untaxed"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                                <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                                    <tr>
                                        <td><span t-esc="amount_by_group[0] or 'Taxes'"/></td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                                <tr class="border-black">
                                    <td><strong>TOTAL</strong></td>
                                    <td class="text-right">
                                        <strong t-field="doc.amount_total"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>

                <span t-field="doc.note"/>

                <!-- Bank details -->
                <t t-set="bank_account" t-value="doc.payment_mode_id.fixed_journal_id.bank_account_id"/>
                <div class="row" t-if="bank_account and bank_account.bank_id">
                    <div class="col-xs-8 pull-left">
                        <span>Payment for: </span><span t-field="doc.company_id.name"/> <span t-field="doc.company_id.partner_id.city"/>
                        <br />
                        <span>Bank: </span><span t-field="bank_account.bank_id.name"/>, <span t-field="bank_account.bank_id.country.code"/>-<span t-field="bank_account.bank_id.zip"/>
                        <span t-field="bank_account.bank_id.city"/>, <span t-field="bank_account.bank_id.country"/>
                        <br />
                        <span>BIC/SWIFT: </span><span t-field="bank_account.bank_id.bic"/><span> / IBAN: </span><span t-field="bank_account.acc_number"/>
                    </div>
                </div>

                <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                <t t-call="sf_terms_and_conditions.sale_terms_and_conditions" />
            </div>
        </t>
    </template>

    <template id="sf_report_saleorder">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sf_sale.sf_report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>