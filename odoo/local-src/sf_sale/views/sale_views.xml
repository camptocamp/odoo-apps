<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sf_sales_order_filter" model="ir.ui.view">
        <field name="name">sf.sales.order.filter"</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <filter name="message_needaction" position="after">
                <separator/>
                <filter string="Waiting for shipping cost" name="no_delivery_method" domain="[('carrier_id','=',False)]"/>
                <filter string="Shipping cost is set" name="with_delivery_method" domain="[('carrier_id','!=',False)]"/>
            </filter>
        </field>
    </record>

    <record id="sf_view_order_form" model="ir.ui.view">
        <field name="name">sf.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="second_user_id"/>
            </field>
        </field>
    </record>

    <record id="view_order_form_user_delivery_method" model="ir.ui.view">
        <field name="name">sf.order.form.carrier.user</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="delivery.view_order_form_with_carrier"/>
        <field name="arch" type="xml">
            <field name="carrier_id" position="replace">
                <field name="carrier_id" context="{'order_id': id}" class="oe_inline" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':True}"/>
            </field>
        </field>
    </record>

    <record id="view_order_form_manage_delivery_method" model="ir.ui.view">
        <field name="name">sf.order.form.carrier.edit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="view_order_form_user_delivery_method"/>
        <field name="groups_id" eval="[(4, ref('sf_stock.group_delivery_method_manager'))]"/>
        <field name="arch" type="xml">
            <field name="carrier_id" position="replace">
                <field name="carrier_id" context="{'order_id': id}" class="oe_inline" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','not in',('draft','sent'))]}"/>
            </field>
        </field>
    </record>

    <record id="sf_view_order_form_inherit_sale_stock" model="ir.ui.view">
        <field name="name">sale.order.form.sale.stock.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock" />
        <field name="arch" type="xml">
            <field name="incoterm" position="attributes">
                <attribute name="attrs">{'readonly': [('state','in',('sale','done'))]}</attribute>
            </field>
        </field>
    </record>
</odoo>